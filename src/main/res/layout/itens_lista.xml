<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:id="@+id/listaItens"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:collapseColumns="4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_itens"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/txt_itens"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_centerVertical="true"/>
<!--                android:layout_toRightOf="@id/cb_itens"-->

            <TextView
                android:id="@+id/txt_valor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:visibility="visible"
                android:layout_centerVertical="true"/>
<!--                android:layout_toRightOf="@id/txt_itens"-->

            <TextView
                android:id="@+id/posic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_centerVertical="true"/>

            <!--                android:layout_toRightOf="@id/txt_valor"-->
        </TableRow>



    </TableLayout>



